  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run TS",
      "type": "node",
      "request": "launch",
      "args": ["src/index.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "dotenv/config"
      ],
      "sourceMaps": true,
      "outputCapture": "std",
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "name": "Run daily exports",
      "type": "node",
      "request": "launch",
      "args": ["src/export/changes.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "dotenv/config"
      ],
      "sourceMaps": true,
      "outputCapture": "std",
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "name": "Run seed",
      "type": "node",
      "request": "launch",
      "args": ["./seeds/index.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "dotenv/config"
      ],
      "sourceMaps": true,
      "outputCapture": "std",
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    }
  ]
}

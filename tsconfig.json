{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./dist",
    "lib": [
        "es6",
        "es2017",
        "esnext.asynciterable"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // Required for apollo
    "skipLibCheck": true,
  },
  "exclude": [
    "dist",
    "node_modules",
    "knexfile*",
    "migrations"
  ]
}
